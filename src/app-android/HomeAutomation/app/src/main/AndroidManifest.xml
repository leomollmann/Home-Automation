<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cognito.homeautomattion">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:background="@color/background_color"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cognito.homeautomation.View.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cognito.homeautomation.View.Login"
            android:label="Login" />
        <activity
            android:name="com.cognito.homeautomation.View.Menu"
            android:label="Menu" />
        <activity
            android:name="com.cognito.homeautomation.View.OutletList"
            android:label="OutletList" />
        <activity
            android:name="com.cognito.homeautomation.View.AddDevice"
            android:label="AddDevice" />
        <activity android:name="com.cognito.homeautomation.View.OutletSettings" />
        <activity
            android:name="com.cognito.homeautomation.View.SignUp"
            android:label="SignUp" />
        <activity android:name="com.cognito.homeautomation.View.TaskScheulde"></activity>
    </application>

</manifest>